@using System.Configuration
@model crisicheckinweb.ViewModels.LoginModel

@{
  ViewBag.Title = "Log in to existing account...";
  Layout = "/Views/Shared/_VolunteerLayout.cshtml";
}


<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
  <h3>Please login before using the site</h3>
    <div id="root" style="width: 300px; margin: 40px auto; padding: 10px; border-style: none; border-width: 1px;">
        <script src="https://cdn.auth0.com/js/lock-7.5.min.js"></script>
        <script>

            if (!window.location.origin) {
                window.location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
            }

            var lock = new Auth0Lock('@ConfigurationManager.AppSettings["auth0:ClientId"]', '@ConfigurationManager.AppSettings["auth0:Domain"]');

            
            lock.show({
                container: 'root'
              , callbackURL: window.location.origin + '/Account/Callback'
              , responseType: 'code'
              , authParams: {
                  scope: 'openid profile'
              }
            });
        </script>
    </div>
</div>
