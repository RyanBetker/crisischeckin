@model crisicheckinweb.ViewModels.LoginModel

@{
  ViewBag.Title = "Log in to existing account...";
  Layout = "/Views/Shared/_VolunteerLayout.cshtml";
}


<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
  <h3>Please login before using the site</h3>
    <div id="root" style="width: 300px; margin: 40px auto; padding: 10px; border-style: none; border-width: 1px;">
        <script src="https://cdn.auth0.com/js/lock-7.5.min.js"></script>
        <script>

            var lock = new Auth0Lock('hL9PNvOlAPUqbSptATKY1k5HsqrKrtd2', 'htbox.auth0.com');
            
            lock.show({
                container: 'root'
              , callbackURL: 'http://localhost:2077/Account/Callback'
              , responseType: 'code'
              , authParams: {
                  scope: 'openid profile'
              }
            });
        </script>
    </div>
</div>
